<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<ScrollPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="forgotpassword.FpassFXMLController">
   <content>
      <AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="450.0" styleClass="mainFxmlClass">
          <stylesheets>
              <URL value="@fpassfxml.css" />
          </stylesheets>
         <children>
            <Button layoutX="18.0" layoutY="12.0" mnemonicParsing="false" onMouseClicked="#backToLogin" text="&lt;">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button layoutX="405.0" layoutY="12.0" mnemonicParsing="false" onMouseClicked="#closeApp" text="X">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Label layoutX="133.0" layoutY="61.0" text="Forgot Password">
               <font>
                  <Font name="Impact" size="30.0" />
               </font>
            </Label>
            <TextField fx:id="accountno" layoutX="65.0" layoutY="153.0" prefHeight="38.0" prefWidth="340.0" promptText="Your Account No" styleClass="field-decoration" stylesheets="@../createaccount/createaccfxml.css" />
            <TextField fx:id="ans" layoutX="65.0" layoutY="274.0" prefHeight="38.0" prefWidth="340.0" promptText="Answer" styleClass="field-decoration" stylesheets="@../createaccount/createaccfxml.css" />
            <Label layoutX="160.0" layoutY="99.0" text="Recover your password here" />
            <ComboBox fx:id="sq" layoutX="65.0" layoutY="209.0" prefHeight="38.0" prefWidth="340.0" promptText="Security Questions" styleClass="field-decoration" stylesheets="@../createaccount/createaccfxml.css" />
            <Button layoutX="135.0" layoutY="348.0" mnemonicParsing="false" onMouseClicked="#recoverPassword" prefHeight="35.0" prefWidth="200.0" styleClass="field-decoration" stylesheets="@../createaccount/createaccfxml.css" text="Recover Password">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>
